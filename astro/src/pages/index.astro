---
import HelloWorldReact from '../components/HelloWorldReact';
import Layout from '../layouts/Layout.astro';
import prisma from '../lib/prisma';

const postsCount = await prisma.post.count();
---

<Layout title="Laitilan Jyske | Yleisurheilu" heroImage="/images/frontpage.jpg">
  <main class="m-auto p-4 max-w-3xl">
    <p
      class="leading-7 my-4 bg-indigo-700 p-4 rounded-md instructions text-neutral-200"
    >
      There is {postsCount} post(s) in the DB
    </p>
    <p>Hello from Astro Tailwind component</p>
    <HelloWorldReact />
  </main>
</Layout>
