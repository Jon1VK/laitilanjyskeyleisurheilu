// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int             @id @default(autoincrement())
  email          String          @unique
  name           String
  isAdmin        Boolean         @default(false)
  isAthlete      Boolean         @default(false)
  athleteProfile AthleteProfile?

  @@index([isAthlete])
}

model AthleteProfile {
  id          Int     @id @default(autoincrement())
  slug        String  @unique
  avatar      String?
  heroImage   String?
  mainEvents  String?
  description String?
  instagram   String?
  linkedin    String?
  userId      Int     @unique
  athlete     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum EventType {
  PRACTICE
  COMPETITION
  OTHER
}

model RecurringEvent {
  id          Int      @id @default(autoincrement())
  startDate   DateTime @db.Date
  endDate     DateTime @db.Date
  weekdays    Int[]
  occurrences Event[]
}

model Event {
  id               Int             @id @default(autoincrement())
  slug             String          @unique
  promote          Boolean         @default(false)
  type             EventType
  startDateTime    DateTime
  endDateTime      DateTime?
  title            String
  description      String?
  location         String?
  externalUrl      String?
  timetableFileKey String?
  resultsFileKey   String?
  recurringEventId Int?
  recurringEvent   RecurringEvent? @relation(fields: [recurringEventId], references: [id], onDelete: Cascade)
}

model Record {
  id         Int      @id @default(autoincrement())
  league     String
  event      String
  athlete    String
  result     String
  handtime   Boolean  @default(false)
  location   String
  achievedAt DateTime @db.Date
  reviewed   Boolean  @default(false)

  @@index([league, event])
}

model News {
  id            Int      @id @default(autoincrement())
  slug          String   @unique
  draft         Boolean  @default(false)
  publishedAt   DateTime @db.Date
  author        String
  cardImage     String?
  title         String
  leadParagraph String
  body          String

  @@index([draft])
}
